generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Team {
  id          String   @id @default(cuid())
  name        String   @unique
  topic       String
  description String?
  members     Json     // { name, email, phone, isLeader }[]
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("teams")
}
